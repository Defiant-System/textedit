<MenuBar>
	<Menu name="Text Edit">
		<Menu name="About Text Edit" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="Close Window" click="close-spawn" hotkey="alt+shift+w"/>
		<Menu name="Close Tab" click="close-tab" hotkey="alt+w"/>
		<Menu type="divider"/>
		<Menu name="Quit Text Edit" shell="win -c"/>
	</Menu>
	<Menu name="File">
		<Menu name="New" click="new-spawn" hotkey="alt+n"/>
		<Menu name="Open&#8230;" click="open-file" hotkey="alt+o"/>
		<Menu type="divider"/>
		<Menu name="Save" click="save-file" hotkey="alt+s"/>
		<Menu name="Save as&#8230;" click="save-file-as" hotkey="alt+shift+s"/>
		<Menu type="divider"/>
		<Menu name="Close File"/>
	</Menu>
	<Menu name="Edit">
		<Menu name="Undo" click="history-undo" hotkey="meta+z"/>
		<Menu name="Redo" click="history-redo" hotkey="meta+shift+z"/>
		<Menu type="divider"/>
		<Menu name="Cut"/>
		<Menu name="Copy"/>
		<Menu name="Paste"/>
		<Menu name="Select All" click="select-all" arg="selectAll" hotkey="meta+a"/>
	</Menu>
	<Menu name="Format">
		<Menu name="Font Family" for="font-families">
			<Menu name="Serif" invoke="group-serif"/>
			<Menu name="Sans-serif" invoke="group-sans-serif"/>
			<Menu name="Monospace" invoke="group-monospace"/>
			<Menu name="Script" invoke="group-script"/>
			<Menu type="divider"/>
			<Menu name="American Typewriter" group="Serif"/>
			<Menu name="Andale Mono" group="Monospace"/>
			<Menu name="Arial" group="Sans-serif"/>
			<Menu name="Arial Black" group="Sans-serif"/>
			<Menu name="Bradley Hand" group="Script"/>
			<Menu name="Brush Script MS" group="Script"/>
			<Menu name="Comic Sans MS" group="Script"/>
			<Menu name="Copperplate Gothic" group="Sans-serif"/>
			<Menu name="Courier" group="Monospace"/>
			<Menu name="Courier New" group="Monospace"/>
			<Menu name="Didot" group="Serif"/>
			<Menu name="Garamond" group="Serif"/>
			<Menu name="Impact" group="Decorative"/>
			<Menu name="Georgia" group="Serif"/>
			<Menu name="Gill Sans" group="Sans-serif"/>
			<Menu name="Helvetica" group="Sans-serif"/>
			<Menu name="Luminari" group="Script"/>
			<Menu name="Optima" group="Sans-serif"/>
			<Menu name="Verdana" group="Sans-serif"/>
			<Menu name="Tahoma" group="Sans-serif"/>
			<Menu name="Rockwell" group="Serif"/>
			<Menu name="Times New Roman" group="Serif"/>
			<Menu name="Trebuchet MS" group="Sans-serif"/>
		</Menu>
		<Menu name="Font Size" for="font-size" type="thin">
			<Menu name="9" click="editor.format-fontSize" arg="9"/>
			<Menu name="10" click="editor.format-fontSize" arg="10"/>
			<Menu name="11" click="editor.format-fontSize" arg="11"/>
			<Menu name="12" click="editor.format-fontSize" arg="12"/>
			<Menu name="13" click="editor.format-fontSize" arg="13"/>
			<Menu name="14" click="editor.format-fontSize" arg="14"/>
			<Menu name="18" click="editor.format-fontSize" arg="18"/>
			<Menu name="24" click="editor.format-fontSize" arg="24"/>
			<Menu name="36" click="editor.format-fontSize" arg="36"/>
			<Menu name="48" click="editor.format-fontSize" arg="48"/>
		</Menu>
		<Menu type="divider"/>
		<Menu name="Bold" click="editor.format" arg="bold"/>
		<Menu name="Italic" click="editor.format" arg="italic"/>
		<Menu name="Underline" click="editor.format" arg="underline"/>
		<Menu type="divider"/>
		<Menu name="Clear Formatting" click="editor.removeFormat"/>
	</Menu>
	<Menu name="Window">
		<Menu name="New Window" click="new-spawn" hotkey="alt+n"/>
		<Menu name="New Tab" click="tab.new" hotkey="alt+t"/>
		<Menu name="Merge All Windows" click="merge-all-windows" hotkey="alt+c"/>
		<Menu type="divider"/>
		<Menu name="Minimize" shell="win -s min"/>
		<Menu name="Maximize" shell="win -s max"/>
		<Menu type="divider"/>
		<Menu name="Close Window" click="close-clone-window" hotkey="alt+w"/>
	</Menu>
	<Menu name="Help">
		<Menu name="Text Edit Help" click="open-help"/>
		<Menu type="divider"/>
		<Menu name="License"/>
	</Menu>
</MenuBar>