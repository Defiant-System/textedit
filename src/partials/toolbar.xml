<ToolBar>
	<Group>
		<Options>
			<Tool symbol="icon-undo" click="editor.undo" state="disabled"/>
			<Tool symbol="icon-redo" click="editor.redo" state="disabled"/>
		</Options>
		<Select name="Arial" width="103" menu="font-families"></Select>
		<Select name="14" width="21" menu="font-size"></Select>
		<Tool symbol="icon-font-color" menu="font-color"/>
		<Options type="grouped">
			<Tool symbol="icon-bold" click="editor.format" arg="bold"/>
			<Tool symbol="icon-italic" click="editor.format" arg="italic"/>
			<Tool symbol="icon-underline" click="editor.format" arg="underline"/>
		</Options>
		<Options>
			<Tool symbol="icon-justify-left" click="editor.format" arg="justifyleft"/>
			<Tool symbol="icon-justify-center" click="editor.format" arg="justifycenter"/>
			<Tool symbol="icon-justify-right" click="editor.format" arg="justifyright"/>
			<Tool symbol="icon-justify-full" click="editor.format" arg="justifyfull"/>
		</Options>
	</Group>
	<Group>
		<Tool symbol="icon-cogs" click="editor.settings"/>
	</Group>
</ToolBar>