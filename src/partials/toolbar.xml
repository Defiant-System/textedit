<ToolBar>
	<Group>
		<Options>
			<Tool symbol="icon-undo" click="history-undo" state="disabled"/>
			<Tool symbol="icon-redo" click="history-redo" state="disabled"/>
		</Options>
		<Select name="Arial" width="103" menu="sys:font-families"></Select>
		<Select name="14" width="21" menu="font-size"></Select>
		<Options type="grouped">
			<Tool symbol="icon-bold" click="format" arg="bold"/>
			<Tool symbol="icon-italic" click="format" arg="italic"/>
			<Tool symbol="icon-underline" click="format" arg="underline"/>
		</Options>
		<Options>
			<Tool symbol="icon-justify-left" click="format" arg="justifyLeft"/>
			<Tool symbol="icon-justify-center" click="format" arg="justifyCenter"/>
			<Tool symbol="icon-justify-right" click="format" arg="justifyRight"/>
			<Tool symbol="icon-justify-full" click="format" arg="justifyFull"/>
		</Options>
	</Group>
</ToolBar>